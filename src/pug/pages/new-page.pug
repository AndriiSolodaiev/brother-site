
extends ../layout/main
block variable
  -
    var title_page = 'new-page'
    var id_page = 'id-page-new-page'
    var class_page = 'class-page-new-page'
    var headerCustomClass = 'type1' 
    var breadcrumbsSubitem = [
      {
        label: 'About',
        link: pagesLink[0].about
      }
    ]
  
block meta
  title= title_page
  meta(name='description', content='')

block head
    link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts

  script(defer src='./assets/scripts/vendors.bundle.js')
  script(defer src='./assets/scripts/header.bundle.js')
  script(defer src='./assets/scripts/footer.bundle.js')
  script(defer src='./assets/scripts/new-page.bundle.js')

block content
  section.concept_section 
    .container
      .concept-block
        img(src="../../assets/images/new-page/concept-section/concept-img.jpg", alt="").concept-img

        div.concept-content-block  
          h2.concept-title Концепція Riel Family Style створює простір, де поєднуються безпека, комфорт та емоційний добробут. 

          p.concept-text ЖК Brother реалізує сценарії життя з увагою до людяності, соцзв&apos;язків, природи й детальної архітектури, аби ви відчували себе вдома з першого кроку.

          a(href="#" target="_blank").concept-link Перейти до проєкту

      img(src="../../assets/images/new-page/concept-section/brother-logo.svg", alt="").concept-logo


  section.advantages-section 
    .container 
      h2.advantages-title.chars-anim Переваги

      ul.advantages-list
        li.advantages-item 
          img(src="../../assets/images/new-page/advantages-section/adv-safe-place.png", alt="").advantages-item__image

          .advantages-item__content-block
            h3.advantages-item__title Безпечне середовище
            p.advantages-item__text Захищені двори, природне освітлення, зонування, що знижує стрес і тривожність.

        li.advantages-item 
          img(src="../../assets/images/new-page/advantages-section/adv-infrastructure.png", alt="").advantages-item__image

          .advantages-item__content-block
            h3.advantages-item__title Зручна інфраструктура
            p.advantages-item__text Все необхідне поруч: сервіси, магазини, дитячі й спільні простори мінімум за хвилини.

        li.advantages-item.community-item
          img(src="../../assets/images/new-page/advantages-section/adv-community.png", alt="").advantages-item__image

          .advantages-item__content-block
            h3.advantages-item__title Ком&apos;юніті та спільність
            p.advantages-item__text Місця для спілкування, взаємодії без зобов&apos;язань; підтримка сусідів і дружнє середовище.

        li.advantages-item 
          img(src="../../assets/images/new-page/advantages-section/adv-sense.png", alt="").advantages-item__image

          .advantages-item__content-block
            h3.advantages-item__title Дизайн із сенсом
            p.advantages-item__text Архітектура з ідентичністю, бренд-думка, продумані маршрути руху, деталі інтер&apos;єру й зовнішнього простору.

        li.advantages-item 
          img(src="../../assets/images/new-page/advantages-section/adv-comfort.png", alt="").advantages-item__image

          .advantages-item__content-block
            h3.advantages-item__title Емоційний комфорт
            p.advantages-item__text Природа, відчуття простору, тиша й світло — простори, що „лікують“ душу.


  section.summary-section 
    .container 
      .summary-content-block
        img(src="../../assets/images/new-page/summary-section/summary-img.png", alt="").summary-image

        .summary-text-block
          h2.summary-title.chars-anim Саммарі
          p.summary-text Riel Family Style у ЖК Father — це філософія житла, яка підкреслює безпеку, соціальні зв&apos;язки і емоційний комфорт, створюючи простір, де людина — в центрі.
          a(href="#" target="_blank").summary-link Залишити заявку

      img(src="../../assets/images/new-page/summary-section/summary-decor-1.png", alt="").summary-decor-1
      img(src="../../assets/images/new-page/summary-section/summary-decor-2.png", alt="").summary-decor-2


block footer
  include ../includes/footer.pug

block header
  include ../includes/header.pug
